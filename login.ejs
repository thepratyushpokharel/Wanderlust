<% layout("/layouts/bp") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Login:</h3>
            <form method="POST" action="/login" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Add your name" type="text" class="form-control" required id="username">
                    <div class="valid-feedback">Title looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input name="password" placeholder="Add your Password" type="password" class="form-control" required id="username">

                </div>
                <button class="btn btn-dark add-btn mt-3">Login</button>
            </form>
        </div>
    </div>